<%= stylesheet_link_tag "desktop/web/devise", :media => "all" %>

<div id="form_notext">
  <h2>アカウントを作成する</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= link_to "Facebookでアカウント作成", user_facebook_omniauth_authorize_path, class: "btn btn-facebook" %>

    <div class="field">
      <%= f.email_field :email, placeholder:"メールアドレス", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :name, placeholder:"ユーザー名", autocomplete: "off" %>
    </div>

    <div class="field">

      <%= f.text_field :sender, placeholder:"送り主名(配送の際に使用されます)", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.text_field :mobile, placeholder:"電話番号 (090 1234 5678)", autocomplete: "off" %>
    </div>

    <div class="field">
      <!--
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />-->
      <%= f.password_field :password, placeholder:"パスワード (6文字以上)", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder:"確認用パスワード", autocomplete: "off" %>
    </div>

    <div class="long_btn">
      <%= f.submit "アカウントを作成" %>
    </div>

    <div class="nav_btn">
      <%= render "devise/shared/links" %>
    </div>

  <% end %>
</div>

