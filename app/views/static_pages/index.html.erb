        <li class="nav1"><%= link_to "トップ", root_path %></li>
        <li class="nav2"><%= link_to "城島町について", about_us_path %></li>
        <li class="nav3"><%= link_to "お問い合わせ", inquiry_path%></li>
        <li class="nav5"><%= link_to "出品者紹介", "#" %></li>
      </ul>
</nav>
      <div class="Intro__main">
