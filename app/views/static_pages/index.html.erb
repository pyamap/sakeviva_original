  <section>
    <div class="NewArrival">
      <h2 class="NewArrival__head">新入荷</h2>
      <p class="NewArrival__text">新商品、季節にあった商品をご紹介します。</p>
     <ul class="NewArrival__main">
     <% @new_products.each do |new_product| %>
       <li class="NewArrival__item">
          <div class="NewArrival__item--picture">
          <%= link_to image_tag(new_product.image.url, height: 280, width: 210, :class => "pc", alt: "商品写真"),product_path(new_product.id) %>
          <%= link_to image_tag(new_product.image.url, height: 90, width: 120, :class => "sp", alt: "商品写真"),product_path(new_product.id) %>
          </div>
          <div class="NewArrival__item--title"><%= link_to new_product.name, product_path(new_product.id) %></div>
          <div class="NewArrival__item--price"><%= number_to_currency(new_product.options.first.value) %></div>
          <i class="fa fa-angle-right" aria-hidden="true"></i>
       </li>
      <% end %>
      </ul>
      </div>
    </div>
  </section>

