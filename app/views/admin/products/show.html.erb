<%= stylesheet_link_tag "products", :media => "all" %>

<div id="products_list">
	<table class="products_list">
		<tr>
			<th>商品名</th>
			<th>価格</th>
			<th class="description">商品詳細</th>
		</tr>
		<tr>
			<td><%= @product.name %></td>
			<td><%= @product.price %></td>
			<td class="description"><%= @product.description %></td>
		</tr>
	</table>
	<% if @product.image? %>
		<div class="thumbnail">
			<%= image_tag @product.image.url, :width => '300', :height => '180' %>
		</div>
	<% end %>
	<%= link_to "編集する", :edit_admin_product %>
	<%= link_to "一覧に戻る", :admin_products %>
</div>