<table class="attr">
	<tr>
		<th><%= form.label :name, "商品名" %></th>
		<td><%= form.text_field :name %></td>
	</tr>

	<tr>
		<th><%= form.label :price, "価格" %></th>
		<td><%= form.number_field :price %></td>
	</tr>

	<tr>
		<th><%= form.label :description, "商品詳細" %></th>
		<td><%= form.text_field :description %></td>
	</tr>

	<div class="photo_upload">
		<% if @product.image? %>
			<div class="thumbnail">
				<%= image_tag @product.image.url %>
			</div>
		<% end %><br>
		<%= form.label :image %>
		<%= form.file_field :image %>
		<%= form.hidden_field :image_cache %>
	</div>
	<dic class="photo_upload">
		<% if @product.persisted? && @product.image? %>
			<label>
				<%= form.check_box :remove_image %>
				画像を削除
			</label>
		<% end %>
	</div>
</table>